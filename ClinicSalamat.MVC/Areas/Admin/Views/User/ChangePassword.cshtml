@model ClinicSalamat.Application.Contract.DTOs.AdminSide.User.ChangeUserPasswordDTO

@{
    ViewData["Title"] = "ویرایش کلمه ی عبور";
}

@section breadcrumbs
{
    <li>
        <a asp-action="ChangePassword">ویرایش کلمه ی عبور</a>
    </li>
}

<form method="post" asp-antiforgery="true" asp-area="Admin" enctype="multipart/form-data">
    <div class="row">
        <div class="col-lg-12 col-sm-12">

            @if (ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="All" class="alert alert-danger"></div>
            }

            <div class="widget">
                <div class="widget-header bordered-bottom bordered-blue">
                    <span class="widget-caption"> @ViewData["Title"] </span>
                </div>
                <div class="widget-body">
                    <div>
                        <div class="card">
                            <div class="card-body">

                                <div class="form-group col-xs-12">
                                    <label asp-for="CurrentPassword"> کلمه ی عبور فعلی</label>
                                    <input asp-for="CurrentPassword" class="form-control" />
                                    <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group col-xs-6">
                                    <label asp-for="NewPassword">کلمه ی عبور جدید</label>
                                    <input asp-for="NewPassword" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>

                                <div class="form-group col-xs-6">
                                    <label asp-for="ReNewPassword">تکرار کلمه ی عبور جدید </label>
                                    <input asp-for="ReNewPassword" class="form-control" />
                                    <span asp-validation-for="ReNewPassword" class="text-danger"></span>
                                </div>

                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 flex-style">
                                <button type="submit" class="btn btn-labeled btn-blue">
                                    <i class="btn-label glyphicon glyphicon-ok"></i>ثبت
                                </button>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</form>


@section Scripts
{
    <partial name="_JqueryValidation" />
}

