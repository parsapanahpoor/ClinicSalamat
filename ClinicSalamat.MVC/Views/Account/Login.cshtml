@model ClinicSalamat.Application.Contract.DTOs.SiteSide.Account.LoginUserDTO

@{
    ViewData["Title"] = "ورود کاربر";
    Layout = null;
}

<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>بیمارستان شفا ساری</title>

    <!-- Bootstrap -->
    <link href="~/content/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <!-- tobii css -->
    <link href="~/content/css/tobii.min.css" rel="stylesheet" type="text/css" />
    <!-- Icons -->
    <link href="~/content/css/materialdesignicons.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="unicons.iconscout.com/release/v3.0.6/css/line.css">
    <!-- Slider -->
    <link rel="stylesheet" href="~/content/css/tiny-slider.css" />
    <!-- Main Css -->
    <link href="~/content/css/style.min.css" rel="stylesheet" type="text/css" id="theme-opt" />
    <link href="~/content/css/colors/default.css" rel="stylesheet" id="color-opt">
</head>

<body>

    <section class="bg-home bg-circle-gradiant d-flex align-items-center">
        <div class="bg-overlay bg-overlay-white"></div>
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-5 col-md-8">
                    <div class="card login-page bg-white shadow rounded border-0">
                        <div class="card-body">
                            <h4 class="card-title text-center">ورود به حساب کاربری </h4>
                            <form asp-action="Login" asp-area="" asp-controller="Account" method="post" class="login-form mt-4">
                                <input type="hidden" asp-for="ReturnUrl" />

                                @if (ViewData.ModelState.ErrorCount > 0)
                                {
                                    <div asp-validation-summary="All" class="alert alert-danger margin-left-20 margin-right-20 margin-top-10"></div>
                                }



                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label class="form-label">موبایل <span class="text-danger">*</span></label>
                                            <div class="form-icon position-relative">
                                                <i data-feather="book" class="fea icon-sm icons"></i>
                                                <input type="text" asp-for="Mobile" class="form-control ps-5" placeholder="موبایل" />
                                                <span style="color:red;" asp-validation-for="Mobile"></span>
                                                @* <input type="email" class="form-control ps-5" placeholder="ایمیل" name="email" required=""> *@
                                            </div>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-lg-12">
                                        <div class="mb-3">
                                            <label class="form-label">کلمه عبور  <span class="text-danger">*</span></label>
                                            <div class="form-icon position-relative">
                                                <i data-feather="key" class="fea icon-sm icons"></i>
                                                <input type="password" asp-for="Password" class="form-control ps-5" placeholder="کلمه عبور" />
                                                <span style="color:red;" asp-validation-for="Password"></span>
                                                @* <input type="password" class="form-control ps-5" placeholder="رمز عبور " required=""> *@
                                            </div>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-lg-12">
                                        <div class="d-flex justify-content-between">
                                            <div class="mb-3">
                                                <div class="form-check">
                                                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                                    <label class="form-check-label" for="flexCheckDefault">مرا به خاطر بسپار </label>
                                                </div>
                                            </div>
                                            <p class="forgot-pass mb-0"><a href="auth-re-password-three.html" class="text-dark fw-bold">فراموشی رمز عبور؟ </a></p>
                                        </div>
                                    </div><!--end col-->

                                    <div class="col-lg-12 mb-0">
                                        <div class="d-grid">
                                            <button type="submit" class="btn btn-primary">ورود  </button>
                                        </div>
                                    </div><!--end col-->
                                    @*    <div class="col-lg-12 mt-4 text-center">
                                    <h6>یا با آن وارد شوید</h6>
                                    <div class="row">
                                    <div class="col-6 mt-3">
                                    <div class="d-grid">
                                    <a href="javascript:void(0)" class="btn btn-light"><i class="mdi mdi-facebook text-primary"></i> فیس بوک </a>
                                    </div>
                                    </div><!--end col-->

                                    <div class="col-6 mt-3">
                                    <div class="d-grid">
                                    <a href="javascript:void(0)" class="btn btn-light"><i class="mdi mdi-google text-danger"></i> گوگل </a>
                                    </div>
                                    </div><!--end col-->
                                    </div>
                                    </div><!--end col--> *@

                                    <div class="col-12 text-center">
                                        <p class="mb-0 mt-3"><small class="text-dark me-2">حساب کاربری ندارید؟ </small> <a href="/Register" class="text-dark fw-bold">ثبت نام کنید </a></p>
                                    </div><!--end col-->
                                </div><!--end row-->
                            </form>
                        </div>
                    </div><!---->
                </div><!--end col-->
            </div><!--end row-->
        </div> <!--end container-->
    </section><!--end section-->
    <!-- javascript -->
    <script src="~/content/js/bootstrap.bundle.min.js"></script>
    <!-- SLIDER -->
    <script src="~/content/js/tiny-slider.js"></script>
    <!-- tobii js -->
    <script src="~/content/js/tobii.min.js"></script>
    <!-- Icons -->
    <script src="~/content/js/feather.min.js"></script>
    <!-- Switcher -->
    <script src="~/content/js/switcher.js"></script>
    <!-- Main Js -->
    <script src="~/content/js/plugins.init.js"></script><!--Note: All init js like tiny slider, counter, countdown, maintenance, lightbox, gallery, swiper slider, aos animation etc.-->
    <script src="~/content/js/app.js"></script><!--Note: All important javascript like page loader, menu, sticky menu, menu-toggler, one page menu etc. -->

</body>
<!--Body Ends-->
</html>
